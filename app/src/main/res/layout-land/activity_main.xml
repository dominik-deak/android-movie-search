<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addToDbButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/addToDbButtonText"
        app:layout_constraintBottom_toTopOf="@+id/searchMoviesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchMoviesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchMoviesButtonText"
        app:layout_constraintBottom_toTopOf="@+id/searchActorsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addToDbButton" />

    <Button
        android:id="@+id/searchActorsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchActorsButtonText"
        app:layout_constraintBottom_toTopOf="@+id/searchMoviesWithSubstringButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchMoviesButton" />

    <Button
        android:id="@+id/searchMoviesWithSubstringButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/searchMoviesWithSubstringButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchActorsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
